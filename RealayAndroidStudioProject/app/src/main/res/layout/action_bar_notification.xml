<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:paddingLeft="20dp"
    android:paddingStart="20dp"
    android:paddingRight="8dp"
    android:paddingEnd="8dp"
    android:background="@color/primary"
    android:gravity="center">

    <!--android:clickable="true"-->
    <!--style="@android:style/Widget.ActionButton"-->

    <ImageView
        android:id="@+id/image_icon_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:contentDescription="@string/private_chats"
        android:gravity="center"
        android:src="@drawable/ic_group_white_24dp" />

    <TextView
        android:id="@+id/text_convs_count"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignEnd="@id/image_icon_chat"
        android:layout_alignRight="@id/image_icon_chat"
        android:layout_alignTop="@id/image_icon_chat"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/shape_notification"
        android:gravity="center"
        android:textColor="@color/on_accent"
        android:textSize="12sp" />

</RelativeLayout>
